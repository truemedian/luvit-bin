# Maintainer: Truemedian <truemedian at gmail dot com>

pkgname='luvit'
pkgver=2.18.1
pkgrel=1
arch=('i686' 'x86_64' 'arm' 'armv6h' 'armv7h')
url="https://github.com/luvit/luvit"
license=('Apache')
depends=('luvi')
makedepends=('lit')
source=("$pkgname-$pkgver.zip::https://lit.luvit.io/packages/luvit/luvit/v$pkgver.zip")
sha256sums=('0e2f8413b87f0aed157f4dfbd56981c8f9f5c96d2461b6a9393bce6bde108747')
options=(!strip)

build() {
    lit make . luvit "$(which luvi)"
}

package() {
    mkdir -p "$pkgdir/usr/bin"
    install -p luvit "$pkgdir/usr/bin/luvit"
}